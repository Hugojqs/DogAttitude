div.card
    div.card-header.custom-contact-form-header.bg-primary
        h4.card-title.text-center.text-white.font-weight-bold Contactez-nous
    div.card-body
        form(method="post")
            div.container
                div.row.justify-content-end
                    div.col-xl-6.col-md-6
                        label Votre nom
                        input(type="text" class="form-control")
                    div.col-xl-6.col-md-6
                        label Votre adresse e-mail
                        input(type="email" class="form-control")

                    div.col-xl-12
                        label.textarea-label Votre message
                        textarea(cols="30", rows="10" class="form-control")

                    div.btn.btn-primary.mt-3 Envoyer